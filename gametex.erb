\documentclass{article}
\begin{document}
\pagenumbering {gobble}
<% game_hash.each do |game, values| %>
\section*{<%= game -%>}
\paragraph{Description}
<%= values[:description] %>
\paragraph{Players}
<%= values[:minplayers] %> - <%= values[:maxplayers] -%>
\paragraph{Age}
<%= values[:age] %> and up
\paragraph{Keywords}
<%= values[:mechanics] %>
\paragraph{Play time}
<%= values[:minplay] %> - <%= values[:maxplay] -%>
<% end %>
\end{document}
